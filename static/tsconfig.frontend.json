{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitBOM": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "lf",
    "outDir": "js",
    "resolveJsonModule": true,
    "rootDir": "ts",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "js",
    "types"
  ],
  "include": [
    "**/*"
  ]
}
